<div class="text-center mb-4">
  <h1 class="display-4"><i class="bi bi-trophy-fill text-warning"></i> Leaderboard</h1>
  <p class="lead">Top players ranked by wins</p>
</div>

<div class="card shadow-sm">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-striped table-hover mb-0">
        <thead class="table-dark">
          <tr>
            <th class="text-center">Rank</th>
            <th>Player</th>
            <th class="text-center">Wins</th>
            <th class="text-center">Losses</th>
            <th class="text-center">Win Rate</th>
          </tr>
        </thead>
        <tbody>
          <% @players.each_with_index do |player, index| %>
            <tr>
              <td class="text-center align-middle">
                <% if index == 0 %>
                  <span class="badge rounded-pill bg-warning text-dark">1st ğŸ¥‡</span>
                <% elsif index == 1 %>
                  <span class="badge rounded-pill bg-secondary">2nd ğŸ¥ˆ</span>
                <% elsif index == 2 %>
                  <span class="badge rounded-pill bg-danger">3rd ğŸ¥‰</span>
                <% else %>
                  <span class="badge rounded-pill bg-light text-dark border"><%= index + 1 %>th</span>
                <% end %>
              </td>
              <td class="align-middle fw-bold"><%= player.name %></td>
              <td class="text-center align-middle text-success"><%= player.wins %></td>
              <td class="text-center align-middle text-danger"><%= player.losses %></td>
              <td class="text-center align-middle">
                <% if player.win_rate >= 50 %>
                  <span class="badge bg-success"><%= player.win_rate %>%</span>
                <% else %>
                  <span class="badge bg-warning text-dark"><%= player.win_rate %>%</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
