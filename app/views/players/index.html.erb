<div class="row mb-5">
  <div class="col-md-6 offset-md-3">
    <div class="card">
      <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Add New Player</h4>
      </div>
      <div class="card-body">
        <%= form_with(model: @player, url: players_path, local: true, data: { turbo: false }, class: "row g-3") do |form| %>
          <div class="col-md-8">
            <%= form.label :name, class: "visually-hidden" %>
            <%= form.text_field :name, required: true, class: "form-control", placeholder: "Player Name" %>
          </div>
          <div class="col-md-4">
            <%= form.submit "Add Player", class: "btn btn-success w-100" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<h2 class="mb-3">All Players</h2>

<% if @players.any? %>
  <div class="table-responsive">
    <table class="table table-striped table-hover table-bordered">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th class="text-center">Wins</th>
          <th class="text-center">Losses</th>
          <th class="text-center">Win Rate</th>
          <th class="text-center">Matches Played</th>
          <th class="text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @players.each do |player| %>
          <tr>
            <td class="align-middle fw-bold"><%= player.name %></td>
            <td class="text-center align-middle"><%= player.wins %></td>
            <td class="text-center align-middle"><%= player.losses %></td>
            <td class="text-center align-middle">
              <% if player.win_rate >= 50 %>
                <span class="badge bg-success"><%= player.win_rate %>%</span>
              <% else %>
                <span class="badge bg-warning text-dark"><%= player.win_rate %>%</span>
              <% end %>
            </td>
            <td class="text-center align-middle"><%= player.total_matches %></td>
            <td class="text-center align-middle">
              <%= button_to "Delete", player_path(player), method: :delete, form: { style: 'display:inline-block;' }, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure?" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="alert alert-info">No players found. Add some players to get started!</div>
<% end %>
