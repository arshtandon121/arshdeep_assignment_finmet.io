<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Recent Matches</h1>
  <%= link_to "Record New Match", new_match_path, class: "btn btn-primary" %>
</div>

<% if @matches.any? %>
  <div class="table-responsive">
    <table class="table table-striped table-hover table-bordered">
      <thead class="table-dark">
        <tr>
          <th>Date</th>
          <th>Winner</th>
          <th>Loser</th>
        </tr>
      </thead>
      <tbody>
        <% @matches.each do |match| %>
          <tr>
            <td><%= match.created_at.strftime("%B %d, %Y %H:%M") %></td>
            <td class="text-success fw-bold"><%= match.winner.name %> ğŸ†</td>
            <td class="text-muted"><%= match.loser.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="alert alert-info">No matches recorded yet.</div>
<% end %>
